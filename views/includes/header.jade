nav.navbar.navbar-inverse
    .container
        .navbar-header
            button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/")
                img(src="/imgs/logo.png")
        .collapse.navbar-collapse#bs-example-navbar-collapse-1
            ul.nav.navbar-nav
                - var allPage={pUrl:['/','/case','/service','/about'],pTitle:['首页','案例','服务','关于']}
                - var thisPG=current
                - var isActive = { Page: thisPG }
                - for (var i = 0; i < allPage.pUrl.length; i++) {
                    - if (isActive.Page==allPage.pUrl[i])
                        li.active
                            a(href=allPage.pUrl[i])=allPage.pTitle[i]
                                span.sr-only (current)
                    - else
                        li
                            a(href=allPage.pUrl[i])=allPage.pTitle[i]
                - }
            form.navbar-form.navbar-right(role="search")
                .input-group
                    input.form-control(type="text" name="keywords" placeholder="Search for...")
                    .input-group-btn
                        button.btn.btn-default(type="button")
                            span.glyphicon.glyphicon-search
