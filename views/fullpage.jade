doctype html
html
   head
      include includes/head
      link(rel='stylesheet' href='/css/bootstrap.fullpage.css')
body
   .menu
      ul.clearfix
         li.active(data-menuanchor='page1')
            a(href='#page1')  page1
         li(data-menuanchor='page2')
            a(href='#page2')  page2
         li(data-menuanchor='page3')
            a(href='#page3')  page3
         li(data-menuanchor='page4')
            a(href='#page4')  page4
         li(data-menuanchor='page5')
            a(href='#page5')  page5
         li(data-menuanchor='page6')
            a(href='#page6')  page6
   #fullpage
      .section page1
      .section page2
      .section
         .slide   page3-tag1
         .slide   page3-tag2
         .slide   page3-tag3
      .section page4
      .section page5
      .section page6

   include includes/foot

   script.
      $(function () {
         $('#fullpage').fullpage({
            'verticalCentered': true,
            'resize':true,
            'css3': true,
            'sectionsColor': ['#254875', '#00FF00', '#254587', '#695684', '#254875', '#00FF00'],
            anchors: ['page1', 'page2', 'page3', 'page4', 'page5', 'page6'],
            menu:'.menu',
            'navigation': true,
            'navigationPosition': 'right',
            'navigationTooltips': ['fullPage.js', 'Powerful', 'Amazing', 'Simple', 'Powerful', 'Amazing']
         })
      })
